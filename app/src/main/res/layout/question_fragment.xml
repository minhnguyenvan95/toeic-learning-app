<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70sp"
        android:background="#00acc1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/previous_question_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15sp"
            android:background="@null"
            android:src="@drawable/back" />

        <TextView
            android:id="@+id/txtNumber"
            android:layout_width="60sp"
            android:layout_height="60sp"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_number"
            android:gravity="center"
            android:text="1"
            android:textColor="#00acc1"
            android:textSize="24sp"
            android:textStyle="bold" />


        <ImageButton
            android:id="@+id/next_question_btn"
            android:layout_width="50sp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignTop="@+id/previous_question_btn"
            android:layout_marginEnd="11dp"
            android:layout_marginRight="11dp"
            android:background="@null"
            android:src="@drawable/next" />
    </RelativeLayout>

    <TextView
        android:id="@+id/txtQuestion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5sp"
        android:layout_marginRight="5sp"
        android:layout_marginTop="20sp"
        android:background="@drawable/bg_question"
        android:padding="5sp"
        android:text="Senten 1: Abc def ghi jkl mno pqr stu vwx yz...dkhhskdasdkashdhaskdhahlksdhakshdkahsdhdklahslkdhasdkhalshdklahdkhasdklhasdkhdkashdklashdlkahdklahdkadlkasdaklshdasklhdakslhdakslhdklsahdksaldhalskhdkalhdklahsa"
        android:textSize="22sp" />

    <RadioGroup
        android:id="@+id/rdbGroupAnswer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RadioButton
            android:id="@+id/rdbAnswerA"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="20sp"
            android:text="A: "
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rdbAnswerB"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:text="B: "
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rdbAnswerC"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:text="C: "
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rdbAnswerD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:text="D: "
            android:textSize="20sp" />
    </RadioGroup>


</LinearLayout>